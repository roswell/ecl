# -*- Mode: Makefile; indent-tabs-mode: nil -*-
# vim: set filetype=makefile tabstop=8 shiftwidth=4 expandtab:

# File: util/Makefile

top_srcdir= @top_srcdir@
srcdir	= @srcdir@
VPATH	= @srcdir@

MACHINE = @MACHINE_VERSION@

# Programs used by "make":
#
CC	= @CC@
DEFS	= @DEFS@
CFLAGS	= @cflags@ @oflag@
CLIBS	= @clibs@

SHELL	= /bin/sh
RM	= @RM@

# Source Directories

HDIR	= @HDIR@

UTILS	= dpp

all:	$(UTILS)

dpp	: ${HDIR}/machines.h dpp.c
	${CC} ${CFLAGS} -I${HDIR} -o dpp $(srcdir)/dpp.c

dpp.exe	: dpp
	coff2exe dpp
	${RM} dpp

clean	:	
	${RM} ${UTILS} core a.out *.o
